<%= form_for(@moresmalltrial) do |f| %>
  <% if @moresmalltrial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@moresmalltrial.errors.count, "error") %> prohibited this moresmalltrial from being saved:</h2>

      <ul>
      <% @moresmalltrial.errors.full_messages.each do |msg| %>
