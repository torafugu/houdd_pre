  <div class="field">
    <%= f.label :atk_mobunit_id %><br />
    <%= render 'select_atk_mobunit', {:f => f} %>
  </div>
  <div class="field">
    <%= f.label :moresmalltrialstatus %><br />
    <%= f.collection_select(:moresmalltrialstatus_id, Moresmalltrialstatus.find(:all), :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <%= f.hidden_field :atk_mobunit_name, :value => @atk_mobunit_name %>
  <%= f.hidden_field :def_mobunit_name, :value => @def_mobunit_name %>
